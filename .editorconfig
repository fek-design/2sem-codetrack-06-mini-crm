root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# PHP/Web files
[*.{php,css,js}]
max_line_length = 80

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off
